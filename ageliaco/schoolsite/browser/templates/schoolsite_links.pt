
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <!--
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1);
                             disable_column_one python:request.set('disable_plone.leftcolumn',1);
                             disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
    -->
</head>

<body>

<metal:main fill-slot="main" >


    <div tal:replace="structure provider:plone.abovecontenttitle" />
    
    <h1 class="documentFirstHeading" >Liens institutionnels</h1>

    <table tal:define="links view/links;
                       morelinks python:context.getFolderContents({'portal_type': 'Link'})" >

        <tr tal:repeat="link links" >
            <tal:item define="link_title python:link[0];
                              link_url python:link[1];
                              link_icon python:link[2];" >
              <td>
                 <a href="" tal:attributes="href link_url" >
                   <span tal:attributes="class python:'icon-' + link_icon" ></span>
                   <span tal:content="link_title" />
                 </a>
              </td>
            </tal:item>              
        </tr>

        <tr tal:repeat="link morelinks" >
            <tal:item define="link_title link/Title;
                              link_url link/getRemoteUrl;" >
              <td>
                 <a href="" tal:attributes="href link_url" >
                   <span class="icon-external-link" ></span>
                   <span tal:content="link_title" />
                 </a>
              </td>
            </tal:item>              
        </tr>
    </table>

    <tal:block define="other_folders view/otherLinksFolders" >
      <tal:block repeat="folder other_folders" >
      
        <tal:folderlinks define="folderObj folder/getObject;
                                 folderlinks python:folderObj.getFolderContents({'portal_type': 'Link'})" >
          <h2 tal:content="folder/Title" />

          <table>
            <tr tal:repeat="link folderlinks" >
            <tal:item define="link_title link/Title;
                              link_url link/getRemoteUrl;" >
              <td>
                 <a href="" tal:attributes="href link_url" >
                   <span class="icon-external-link" ></span>
                   <span tal:content="link_title" />
                 </a>
              </td>
            </tal:item>              
            </tr>
          </table>
        </tal:folderlinks>
        
      </tal:block>  
    </tal:block> 
  
</metal:main>

</body>
</html>

